<%= form_for @planet, url: "/planets" do |f| %>

<%= f.text_field :name, :placeholder => "Name", class: 'input' %><br>
<%= f.text_field :image_url, :placeholder => "Image URL", class: 'input' %><br>
<%= f.text_field :diameter, :placeholder => "Diameter (km)", class: 'input' %><br>
<%= f.text_field :mass, :placeholder => "Mass (Earth mass equivalent)", class: 'input' %><br>
<p>Is there life?<%= f.select :life, {"YES" => true, "NO" => false}, {include_blank: true} , class: 'drop_down'%></p>
<%= f.submit "Create", class: 'button'%>
<% end %>

