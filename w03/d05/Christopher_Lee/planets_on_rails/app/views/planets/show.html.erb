<div class="section group planet_info">
  <div class="col span_2_of_12 title">
  <h1><%= @planet.name %></h1>
  <hr>
  <p>diameter: <%= @planet.diameter %>
  <p> mass: <%= @planet.mass %></p>
  <p>life: <%= @planet.life %></p>
   <%= link_to 'Edit', edit_planet_path(@planet), class: "add space" %>
   <%= link_to 'Delete', @planet, :method => 'delete', class: "add space" %>
  </div>
  <div class="col span_6_of_12">
      <img src="<%= @planet.image_url %>">
  </div>
   <div class="col span_4_of_12 title">
  <h2>Moons</h2>
  <hr>
  </div>


  <% moons = Moon.where(planet_id: @planet.id) %>
    <% moons.each do |moon| %>
     <div class="col span_1_of_12 title right">
        <img src=<%= moon.image_url %>>
      </div>
      <div class="col span_2_of_12 moon_title right">
        <h4><%= moon.name %></h4>
        <p>diameter: <%= moon.diameter %></p>
        <p>life: <%= moon.life %></p>
      </div>
      <div class="col span_1_of_12 right">
        <%= link_to 'Edit', "/planets/edit_moon/#{moon.id}/#{@planet.id}", class: "edit" %>
        <%= link_to 'Delete', "/planets/destroy_moon/#{moon.id}", class: "edit" %>
      </div>
  <% end %>
  <div class="span_8_of_2 tall">
  </div>
    <div class="span_4_of_12 right">
     <%= link_to 'Create New Moon', "/planets/new_moon/#{@planet.id}", class: "add" %>
    </div>

