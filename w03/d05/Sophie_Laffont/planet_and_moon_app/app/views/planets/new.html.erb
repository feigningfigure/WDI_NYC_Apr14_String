
<%# this DOES need a crying clown hat %>
<%= form_for @planet, url: "/planets" do |f| %>

  <p>
    Name: <%= f.text_field :name, placeholder:"type the planet name" %>
  </p>
  <p>
  Image_url: <%= f.text_field :image_url, placeholder:"type the image url" %>
  </p>
  <p>
  Diameter: <%= f.text_field :diameter, placeholder:"type the diameter" %>
  </p>
  <p>
  Mass: <%= f.text_field :mass, placeholder:"type the mass" %>
  </p>
  <p>
  Life: <%= f.text_field :life, placeholder:"true or false" %>
  </p>
  <%= f.submit "Create" %>

<% end %>
