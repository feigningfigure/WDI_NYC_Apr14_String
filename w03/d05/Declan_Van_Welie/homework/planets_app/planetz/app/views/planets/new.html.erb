<nav>

    <%= link_to "all", planets_path %> |
</nav>

<%= form_for @planet, url: "/planets" do |f| %>

  <p>
    Name: <%= f.text_field :name %>
  </p>
  <p>
  Image: <%= f.text_field :image_url %>
  </p>

<p>
  Diameter: <%= f.text_field :diameter %>
  </p>
<p>
  Mass: <%= f.text_field :mass %>
  </p>

  <p>
  Life: <%= f.text_field :life %>
  </p>

  <%= f.submit "Create" %>

<% end %>

