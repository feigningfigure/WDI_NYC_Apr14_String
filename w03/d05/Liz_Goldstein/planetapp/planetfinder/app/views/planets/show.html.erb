
      <% planet = Planet.find(params[:id]) %>

        <h1><%= planet.name %>!</h1>

      <div class= "planet_box">
       <div class= "planet_image">
        <p><%= image_tag planet.image_url %></p>
      </div>

       <div class="planet_facts">
        <p>Diameter: <%= planet.diameter %>
        <p>Mass: <%= planet.mass %>
        <p>Supports life? <%= planet.life %>
      </div>
    </div>


