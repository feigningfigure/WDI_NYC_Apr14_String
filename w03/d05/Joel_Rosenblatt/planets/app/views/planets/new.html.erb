<div class="new">
<h3>Ahoy! What have you discovered?</h3>

<%= form_for @planet, url: "/planets" do |f| %>

  <p>
    Name: <%= f.text_field :name %>
  </p>
  <p>
    Image URL: <%= f.text_field :image_url %>
  </p>
  <p>
    Diameter: <%= f.text_field :diameter %>
  </p>
  <p>
    Mass: <%= f.text_field :mass %>
  </p>
  <p>
    Inhabited: <%= f.text_field :life %>
  </p>
  <%= f.submit "Create", :class => "create" %>

<% end %>
</div>
