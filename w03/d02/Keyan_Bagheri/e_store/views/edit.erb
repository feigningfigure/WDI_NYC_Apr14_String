<form action="/product/<%= @product.id %>/edit" method="POST">
  <p>
    <input type="text" name="name" value="<%= @product.name %>">
  </p>
  <p>
    <input type="money" name="price" value="<%= @product.price %>">
  </p>
  <p>
    <textarea name="description" value="Enter Description"><%= @product.description %></textarea>
  </p>
  <p>
    <input type="integer" name="quantity" value="<%= @product.quantity %>">
  </p>
  <input type="submit" value="Update Product" />
</form>
