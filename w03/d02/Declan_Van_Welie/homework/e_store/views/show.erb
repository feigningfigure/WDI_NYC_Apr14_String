<% if @item %>
  <div class="item">
   <h2><%= @item.name %></h2>
        <div>
          <ul>
            <li><%= @item.price %></li>
            <li><%= @item.description %></li>
            <li><%= @item.quantity %></li>
          </ul>
          <a href="/items/<%= @item_id %>/edit">edit</a>
            <a href="/items/<%= @item_id %>/delete">delete</a>
        </div>
  </div>
<% else %>
  <div class="item">
    No item found with that ID!
  </div>
<% end %>
