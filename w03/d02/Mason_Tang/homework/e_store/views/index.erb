<ul class="items">
  <% @items.each do |item| %>
    <li>
      <h2><a href="/items/<%= item.id %>/view "><%= item.name %></a></h2>
      <div>
        <p><%= item.price %></p>
        <p>
          by <%= item.description %> with <%= item.quantity %>

           on <%= item.created_at %>
        </p>
      </div>
    </li>
  <% end %>
</ul>
