<% if @item %>
  <div class="item">
   <h2><%= @item.name %></h2>
        <div>
          <ul>
            <li>Price: $<%= @item.price %></li>
            <li>Description: <%= @item.description %></li>
            <li>Quantity: <%= @item.quantity %></li>
            <li>Date/Time: <%= @item.created_at %></li>
          </ul>

          <p>
            <a href="/items/<%= @item_id %>/edit">edit</a> | <a href="/items/<%= @item_id %>/delete">delete</a>
          </p>
        </div>
  </div>
<% else %>
  <div class="item">
    No item found with that ID!
  </div>
<% end %>
