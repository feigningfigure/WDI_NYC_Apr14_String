<% if @post %>
  <div class="post">
   <h2><%= @post.title %></h2>
        <div>
          <p><%= @post.body %></p>
          <p>
            by <%= @post.author %> <img src="<%= @post.author_photo %>"/> on <%= @post.created_at %>
          </p>
          <p>
            <a href="#">edit</a> | <a href="/posts/<%= @post_id %>/delete">delete</a>
          </p>
        </div>
  </div>
<% else %>
  <div class="post">
    No post found with that ID!
  </div>
<% end %>
