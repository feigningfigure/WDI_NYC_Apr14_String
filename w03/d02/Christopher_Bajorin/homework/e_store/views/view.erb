
<% if @item %>
  <div class="item">
   <h2><%= @item.name %></h2>
        <div>
          <p>
            <%= @item.price %>
          </p>
          <p>
            <%= @item.description %>
          </p>
          <p>
            <%= @item.quantity %>
          </p>
          <p>
          <%= @item.created_at %>
          </p>
          <p>
            <a href="/items/<%= @item.id %>/edit">edit</a> | <a href="/items/<%= @item.id %>/delete">delete</a>
          </p>
        </div>
  </div>
<% else %>
  <div class="item">
    No item found with that ID!
  </div>
<% end %>
