<div>
  <input id="task-text-input" placeholder="enter a task" />
  <input id="due-date-input" placeholder="enter a due date" />
  <button id="add-task-button">Add Task</button>
</div>

<h2>Listing tasks</h2>

<table>
  <thead>
    <tr>
      <th>Task text</th>
      <th>Due date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.task_text %></td>
        <td><%= task.due_date %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
