<h2>Make a New Task</h2>

	<div id="task_form">
		<input id="task_text_input" placeholder="enter a task">
		<input id="due_date_input" placeholder="enter a due date">

		<button id="add_task_button">Add Task</button>
	</div>


<h2>Listing tasks</h2>

<table id="tasks_index_table">
  <thead>
    <tr>
    																			<th>ID</th>
    <th>Task text</th>
    <th>Due date</th>
    <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr id="<%=task.id%>" class="table_row">
      																			<td><%= task.id %></td>
        <td><%= task.task_text %></td>
        <td><%= task.due_date %></td>
        <!-- <td><%= link_to 'Show', task %></td>-->
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><button id="<%=task.id%>" class="delete_btn">delete</button></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

