<h1>Listing gladiators</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Weapon</th>
      <th>Victory count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @gladiators.each do |gladiator| %>
      <tr>
        <td><%= gladiator.name %></td>
        <td><%= gladiator.weapon %></td>
        <td><%= gladiator.victory_count %></td>
        <td><%= link_to 'Show', gladiator %></td>
        <td><%= link_to 'Edit', edit_gladiator_path(gladiator) %></td>
        <td><%= link_to 'Destroy', gladiator, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Gladiator', new_gladiator_path %>
