<div>
  <input id="task_text_input" placeholder="enter a task">
  <input id="due_date_input" placeholder="enter a due date">

  <button id="add_task_button">Add Task</button>

</div>

<ul class="show_list">
  <!-- <li><%#= @todos %></li> -->
  <% @todos.order(id: :desc).each do |todo| %>
    <li><%= todo.task_text %></li>
    <li><%= todo.due_date %></li>
  <% end %>
</ul>


