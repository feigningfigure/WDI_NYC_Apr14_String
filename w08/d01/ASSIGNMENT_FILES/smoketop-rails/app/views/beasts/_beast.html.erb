<% @beasts.each do |beast| %>
  <article class="beast" id="beast-<%= beast.id %>">
    <header>
      <h1><%= beast.name %></h1>
      <%= image_tag(beast.image_filename || 'unavailable.png') %>
    </header>
    <section class="entry-body">
      <table>
        <% %w(name diet id habitat light_ethology size).each do |attr| %>
          <tr class="<%= attr %>">
            <td class="key"><strong><%= attr.humanize %></strong></td>
            <td class="value"><%= beast[attr] %></td>
          </tr>
        <% end %>
      </table>
      <% beast.description_paragraphs.each do |p| %>
        <p><%= p %></p>
      <% end %>
    </section>
  </article>
<% end %>
