<%= form_for @superhero, method: "POST" do |f| %>
  <%= f.text_field :name, {placeholder: "name"} %>
  <%= f.text_field :super_power, {placeholder: "headquarters"} %>
  <%= f.text_field :superteam, {placeholder: "headquarters_location"} %>

  <%= f.hidden_field :id %>                   <!-- QUESTION: WHY ISN'T THIS NEEDED? -->

  <%= f.submit %>
<% end %>