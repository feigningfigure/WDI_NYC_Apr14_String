<h2 class="producer_title"><%= @producer.title %></h2>
<p>
  <%= link_to "edit", "/producers/#{@producer.id}/edit" %>
</p>
<p class="producer_description">
  <%= @producer.description %>
</p>
<h3>Beats</h3>
<%= render partial: "beats/beatform", locals: { beat_local: @beat, producer_id: @producer.id }%>
<ul class="beats">
  <% @producer.beats.order(id: :desc).each do |beat| %>
    <li class="beat">
      <h4><%= beat.title %></h4>
      <p>
        <%= link_to "show", "/beats/#{beat.id}" %> |
        <%= link_to "edit", "/beats/#{beat.id}/edit" %>
      </p>
    </li>
  <% end %>
</ul>
