<h1> WELCOME TO ARTY </h1>

<%= form_for @gallery, url: "/galleries", method: "POST" do |f| %>
  <%= f.text_field :name, {placeholder: "title"} %>
  <%= f.text_field :address, {placeholder: "address"} %>
  <%= f.submit %>
<% end %>

<h2>List of Galleries</h2>
<ul class="galleries">
  <% @galleries.each do |gallery| %>
    <li><%= link_to gallery.name, "/galleries/#{gallery.id}" %></li>
  <% end %>
</ul>
