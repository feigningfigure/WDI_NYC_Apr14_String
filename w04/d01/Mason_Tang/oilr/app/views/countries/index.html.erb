<%= form_for @country, url: "/countries", method: "POST" do |f| %>
  <%= f.text_field :title, {placeholder: "title"} %>
  <%= f.text_field :description, {placeholder: "description"} %>
  <%= f.submit %>
<% end %>

<h2>Countries</h2>
<ul class="countries">
  <% @countries.each do |country| %>
    <li><%= link_to country.title, "/countries/#{country.id}" %></li>
  <% end %>
</ul>
