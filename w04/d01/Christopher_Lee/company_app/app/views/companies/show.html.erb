<h2 class="company_name"><%= @company.name %></h2>
<p>
  <%= link_to "edit", "/companies/#{@company.id}/edit" %>
</p>
<h3>Products</h3>
<ul class="products">
  <% @company.products.order(id: :desc).each do |product| %>
    <li class="product">
      <h4><%= product.name %></h4>
      <p>
        <%= link_to "edit", "/products/#{product.id}/edit" %>
      </p>
    </li>
  <% end %>
</ul>
