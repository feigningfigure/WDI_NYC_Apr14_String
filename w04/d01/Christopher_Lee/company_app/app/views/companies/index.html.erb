<% @companies.each do |company| %>
  <div class="section group company">
    <div class="col span_2_of_12">
    </div>
    <div class="col span_6_of_12">
      <%= link_to "/companies/#{company.id}" do %>
        <img src=<%= company.image_url %>>
      <% end %>
    </div>
     <div class="col span_4_of_12 assets">
        <h2>$<%= company.assets_in_billions %> billion in assets</h2>
    </div>
  </div>
  <div class="section group">
    <div class="col span_2_of_12">
    </div>
  <% company.products.each do |product| %>
      <div class="col span_1_of_12">
        <img src=<%= product.image_url %>>
      </div>
    <% end %>
    <div class="col span_1_of_12">
      <%= link_to "/products/#{company.id}/new/" do %>
      <h1 class="add">+<h1>
      <% end %>
    </div>
  </div>

<% end %>

<div class="section group company">
  <div class="col span_2_of_12">
  </div>
    <div class="col span_8_of_12">
      <h4>ADD A COMPANY</h4>
      <%= form_for @company do |f| %>
        <%= f.text_field :name, {placeholder: "name"} %>
        <%= f.text_field :image_url, {placeholder: "image_url"} %>
        <%= f.text_field :assets_in_billions, {placeholder: "assets"} %>
        <%= f.text_field :founded, {placeholder: "founded"} %>
        <%= f.submit "Create" %>
      <% end %>
    </div>
</div>



