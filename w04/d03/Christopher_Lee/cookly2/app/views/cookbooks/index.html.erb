<div class="section group">
  <div class="col span_6_of_12">
    <h2>Cookbooks</h2>
  <ul class="cookbooks">
  <% @cookbooks.each do |cookbook| %>
    <li>
      <h4><%= link_to cookbook.title, "/cookbooks/#{cookbook.id}" %></h4>
      <p>
        by <%= cookbook.chef.name %>
      </p>
    </li>
  <% end %>
</ul>

  </div>
  <div class="col span_6_of_12 form_right">
  <%= render partial: "cookbookform", locals: { cookbook_local: @cookbook } %>
  </div>
</div>




